<% layout('layouts/boilerplate') %>

<div class="container">
    <div class="container heading-reg">
        <h1>Rezervacija mesta</h1>
      </div>
    <div class="container reg-korisnici">
        <form action="/rezervacija" method="POST" class="needs-validation" novalidate>
            <div class="row">

                 <!-- Kafic id -->
                <div class="col-lg-12">
                    <div class="form-group">
                        <label for="broj_mesta">Kafic: </label>
                        <select class="form-control mt-2" aria-label="Default select example" name="kafic_id">
                            <option selected>Izaberi kafic</option>
                            <% for (var i = 0; i < data.length; i++) { %>
                                <option value="<%= data[i].kafic_id %>" ><%= data[i].kafic_naziv %></option>
                            <% } %> 
                        </select>
                    </div>
                     <!-- Broj mesta za rezervaciju -->
                <div class="form-group mt-3">
                    <label for="broj_mesta">Broj mesta: </label>
                    <input type="number" class="form-control mt-2" id="broj_mesta" name="broj_mesta" min="1" max="10" required >
                    <div id="helper" class="form-text">Maksimalno 10 slobodnih mesta mozete da rezervisete</div>
                </div>
            </div>
    
             <!-- Napomena -->
            <p class="mt-5">Rezervacija traje 30 minuta </p>
            <hr>
            <!-- Dugme -->
            <input type="submit" class="btn-submit" value="Rezervisi ">
        </form>
    </div>
</div>
<span class="spacing">a</span>